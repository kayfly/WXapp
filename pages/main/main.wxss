.container{
    margin: auto;
    width: 700rpx;
    height: 100%;
}
.page__hd_search {
    margin: auto;
    width: 680rpx;
    height: 62rpx;
    color: gray;
    font-size: 30rpx;
    line-height: 62rpx;
    border-radius: 31rpx;
    background-color: #ebecee;
}
.page__hd_search image {
    width: 33rpx;
    height: 33rpx;
    margin-left: 44rpx;
}
.page__bd {
    text-align: center;
    margin: auto;
    margin-top: 44rpx;
    width: 633rpx;
    display: grid;
    grid-template-columns: repeat(2,1fr);
    grid-template-rows: repeat(2,402rpx);
    grid-gap: 56rpx;
} 

.page__bd-create {
    width: 289rpx;
    height: 402rpx;
    border: 2rpx solid #edecee;
    border-radius: 15rpx;
}
/* 没有show的样式： */
.page_bd_diarys {
    width: 289rpx;
    height: 402rpx;
    border: 2rpx solid #edecee;
    border-radius: 15rpx;
}
.page_bd_diarys image {
    margin: auto;
    border-radius: 15rpx;
    width: 70rpx;
    height: 70rpx;
}
/*增加超出行数显示省略号的功能*/
.page_bd_diarystitle {
    word-wrap: 9;
    text-align: center;
    color: #525357;
    font-size: 32rpx;

    overflow:hidden;  
    text-overflow:ellipsis;  
    display:-webkit-box;  
    -webkit-line-clamp:1;  
    -webkit-box-orient:vertical;  
}

.page_bd_diarydelete {
    word-wrap: 9;
    text-align: center;
    color: #DB845E;
    font-size: 28rpx;
}

.page_bd_diarysrhesis {
    word-wrap: 9;
    text-align: center;
    color: #76777b;
    font-size: 28rpx;

    overflow:hidden;  
    text-overflow:ellipsis;  
    display:-webkit-box;  
    -webkit-line-clamp:3;  
    -webkit-box-orient:vertical;  
}
.page_bd_diarysTime {
    word-wrap: 9;
    text-align: center;
    color: #525357;
    font-size: 22rpx;
}

.page_bd_diarysUser {
    text-align: center;
    font-size: 22rpx;
    color: #76777b;
    margin-top: 20rpx;
}
.page_bd_diarysUser:before {
    content: '';
    position: absolute;
    width: 70rpx;
    height: 10rpx;
    margin-top: -10rpx;
    margin-left: 4rpx;
    border-top: 1rpx solid #b9babe;
}
.page__bd-create{
    width: 280rpx;
    height: 394rpx;
    border: 5rpx dotted #b3b3b3;
    border-radius: 15rpx;
}
.page__bd-create:hover{
    border: 5rpx dotted #1296DB;
    background: #edecee;
}
.page__bd-create-text {
    font-size: 30rpx;
    color: #b3b3b3;
    text-align: center;
    margin-top: 240rpx;
}
.page__bd-create-text:before {
    content: '';
    position: absolute;
    width: 110rpx;
    height: 100rpx;
    margin-top: -69rpx;
    margin-left: 5rpx;
    border-top: 3px solid #adadad;
}
.page__bd-create-text:after {
    content: '';
    position: absolute;
    width: 110rpx;
    height: 110rpx;
    margin-top: -122rpx;
    margin-left: -173rpx;
    border-right: 3px solid #adadad;
}


