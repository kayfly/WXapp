<import src="../starsList/starsList.wxml"/>
<view class="container">
    <view class="page__hd center">
       




       <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
<input type="text" class="weui-search-bar__input" placeholder="搜索" data-array="{{newstars}}" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
<view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
            <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
            </label>
            </view>
<view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>
        </view>


    
    <view class="page__bd">
        <block wx:if="{{display}}" wx:for="{{newstars}}" wx:key="{{index}}">
            <view class="page_bd_stars">
                <image src="../../../images/{{item.starpic}}"></image>
                <view class="page_bd_starsName">{{item.starName}}</view>
                <view class="page_bd_starsUser">{{item.type}}</view>
                <view class="page_bd_starsName">{{item.rhesis}}</view>
                <text class="page_bd_starsName" catchtap="deleteDiary" data-array="{{newstars}}" data-index="{{index}}">删除</text>
            </view>
        </block>


         <block wx:if="{{display2}}" wx:for="{{resultShow}}" wx:key="{{index}}">
            <view class="page_bd_stars">
                <image src="../../../images/{{item.starpic}}"></image>
                <view class="page_bd_starsName">{{item.starName}}</view>
                <view class="page_bd_starsUser">{{item.type}}</view>
                <view class="page_bd_starsName">{{item.rhesis}}</view>
                <text class="page_bd_starsName" catchtap="deleteDiary" data-array="{{resultShow}}" data-index="{{index}}">删除</text>
            </view>
        </block>


        <block wx:for="{{stars}}" wx:key="{{index}}"><template is="stars_list" data="{{...item}}"/></block>
        <view class="page__bd-create" bindtap="toCreateStar">  
            <view class="page__bd-create-text">今日心情</view>
        </view>    
    </view>
</view>